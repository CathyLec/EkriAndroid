<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.movilbox.lector.Opciones"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/lblOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escoja su opcion:"
        android:textSize="30sp"
        android:layout_marginBottom="60dp"/>

    <Button
        android:id="@+id/btnCronologia"
        style="@android:style/Widget.Button"
        android:layout_width="200px"
        android:layout_height="0px"
        android:layout_weight="2"
        android:background="@android:color/holo_blue_dark"
        android:breakStrategy="balanced"
        android:fontFamily="monospace"
        android:onClick="Cronologia"
        android:text="Cronologia"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="415dp" />

    <Button
        android:id="@+id/btnEditor"
        android:layout_width="200px"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@android:color/holo_green_light"
        android:breakStrategy="balanced"
        android:fontFamily="monospace"
        android:onClick="EditorDeTexto"
        android:text="Editor"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="44dp" />

    <Button
        android:id="@+id/btnLugares"
        android:layout_width="200px"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@android:color/holo_orange_light"
        android:breakStrategy="balanced"
        android:fontFamily="monospace"
        android:onClick="MostrarLugares"
        android:text="Lugares"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/btnPersonajes"
        android:layout_width="200px"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@android:color/holo_red_light"
        android:breakStrategy="balanced"
        android:fontFamily="monospace"
        android:onClick="MostrarPersonajes"
        android:text="Personajes"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="353dp"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btnOpen2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:contentDescription="@string/app_name"
            android:onClick="Notas"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/notes" />

        <ImageButton
            android:id="@+id/imgBtnHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:baselineAlignBottom="true"
            android:baselineAligned="false"
            android:onClick="MostrarTextos"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home" />
    </LinearLayout>

</LinearLayout>
